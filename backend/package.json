{
  "name": "civic-trivia-backend",
  "version": "1.0.0",
  "description": "Backend API for Civic Trivia Championship",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && cp -r src/data dist/ && mkdir -p dist/db/seed && cp src/db/seed/sources.json dist/db/seed/",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit push",
    "db:seed": "tsx src/db/seed/seed.ts",
    "db:seed:community": "tsx src/db/seed/seed-community.ts"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cheerio": "^1.2.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.45.1",
    "express": "^4.18.2",
    "express-validator": "^7.3.1",
    "file-type": "^21.3.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "p-limit": "^7.3.0",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.6",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.31.9",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
